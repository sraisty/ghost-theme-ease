{{!< default}}

<div class="gh-outer">
<main class="site-main gh-inner">

    {{#if @custom.show_featured_posts}}
        {{> "featured-posts"}}
    {{/if}}

  
    {{#get "tags" include="count.posts" limit="all" order="slug asc" as |topic|}}
    <div class="topic-feed">

        {{#foreach topic}}
            <section class="topic">
                <header class="topic-header">
                    <h2 class="topic-name">
                        <a href="{{url}}">{{name}}</a>
                    </h2>
                </header>
                {{#get "posts" order="published_at desc" filter="tag:{{slug}}+visibility:public" limit="5" as |featured|}}
                    <ul class="topic-article-feed">
                        {{#foreach featured}}
                        <li class="topic-article">
                            <h3 class="topic-article-title">
                                <a class="topic-article-link" href="{{url}}">
                                    {{> "icons/chevron-right"}} {{title}}
                                </a>
                            </h3>
                        </li>
                        {{/foreach}}
                    </ul>
                {{/get}}
                <a class="topic-more" href="{{url}}">Show more â†’</a>
            </section>
        {{/foreach}}

    </div>
    {{/get}}

</main>
</div>